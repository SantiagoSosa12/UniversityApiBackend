                <label asp-for="updateddBy" class="control-label"></label>
                <input asp-for="updateddBy" class="form-control" />
                <span asp-validation-for="updateddBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="updatedAt" class="control-label"></label>
                <input asp-for="updatedAt" class="form-control" />
                <span asp-validation-for="updatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deleteBy" class="control-label"></label>
                <input asp-for="deleteBy" class="form-control" />
                <span asp-validation-for="deleteBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deleteAt" class="control-label"></label>
                <input asp-for="deleteAt" class="form-control" />
                <span asp-validation-for="deleteAt" class="text-danger"></span>
            </div>
